{
    "version": 1001,
    "index_patterns": ["*items*"],
    "order": 0,
    "settings": {
        "index": {
            "analysis": {
                "analyzer": {
                    "custom_path_tree_reversed": {
                        "tokenizer": "custom_hierarchy_reversed"
                    },
                    "custom_path_tree": {
                        "tokenizer": "custom_hierarchy"
                    },
                    "fulltext_analyzer": {
                        "filter": ["lowercase", "type_as_payload"],
                        "type": "custom",
                        "tokenizer": "whitespace"
                    }
                },
                "tokenizer": {
                    "custom_hierarchy": {
                        "type": "path_hierarchy",
                        "delimiter": "/"
                    },
                    "custom_hierarchy_reversed": {
                        "reverse": "true",
                        "type": "path_hierarchy",
                        "delimiter": "/"
                    }
                }
            },
            "refresh_interval": "5s"
        }
    },
    "mappings": {
        "properties": {
            "@timestamp": {
                "type": "date"
            },
            "@version": {
                "type": "text",
                "fields": {
                    "keyword": {
                        "type": "keyword",
                        "ignore_above": 256
                    }
                }
            },
            "all:catalognumber": {
                "type": "keyword"
            },
            "all:catref": {
                "type": "keyword"
            },
            "bibframe:datasource": {
                "type": "text",
                "term_vector": "with_positions_offsets",
                "fields": {
                    "with_payloads": {
                        "analyzer": "fulltext_analyzer",
                        "term_vector": "with_positions_offsets_payloads",
                        "store": true,
                        "type": "text"
                    }
                }
            },
            "bibframe:electroniclocator": {
                "type": "text",
                "fields": {
                    "tree": {
                        "analyzer": "custom_path_tree",
                        "type": "text"
                    },
                    "tree_reversed": {
                        "analyzer": "custom_path_tree_reversed",
                        "type": "text"
                    }
                }
            },
            "bibframe:identifier@item": {
                "type": "keyword"
            },
            "bibframe:itemof@work": {
                "type": "keyword"
            }
        }
    }
}

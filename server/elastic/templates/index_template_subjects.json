{
    "version": 1001,
    "index_patterns": ["*subjects*"],
    "order": 0,
    "settings": {
        "index": {
            "analysis": {
                "analyzer": {
                    "custom_path_tree_reversed": {
                        "tokenizer": "custom_hierarchy_reversed"
                    },
                    "custom_path_tree": {
                        "tokenizer": "custom_hierarchy"
                    }
                },
                "tokenizer": {
                    "custom_hierarchy": {
                        "type": "path_hierarchy",
                        "delimiter": "/"
                    },
                    "custom_hierarchy_reversed": {
                        "reverse": "true",
                        "type": "path_hierarchy",
                        "delimiter": "/"
                    }
                }
            },
            "refresh_interval": "5s"
        }
    },
    "mappings": {
        "properties": {
            "@timestamp": {
                "type": "date"
            },
            "@version": {
                "type": "text",
                "fields": {
                    "keyword": {
                        "type": "keyword",
                        "ignore_above": 256
                    }
                }
            },
            "all:subjectitems": {
                "type": "text",
                "fields": {
                    "keyword": {
                        "type": "keyword",
                        "ignore_above": 256
                    }
                }
            },
            "all:subjectitems@eng": {
                "type": "text",
                "fields": {
                    "keyword": {
                        "type": "keyword",
                        "ignore_above": 256
                    }
                }
            },
            "bibframe:identifier@subject": {
                "type": "keyword"
            },
            "bibframe:name": {
                "type": "text",
                "fields": {
                    "tree": {
                        "analyzer": "custom_path_tree",
                        "type": "text"
                    },
                    "tree_reversed": {
                        "analyzer": "custom_path_tree_reversed",
                        "type": "text"
                    }
                }
            },
            "bibframe:name@eng": {
                "type": "text",
                "fields": {
                    "tree": {
                        "analyzer": "custom_path_tree",
                        "type": "text"
                    },
                    "tree_reversed": {
                        "analyzer": "custom_path_tree_reversed",
                        "type": "text"
                    }
                }
            },
            "bibframe:name@skt": {
                "type": "text"
            }
        }
    }
}

{
    "version": 1001,
    "index_patterns": ["*works*"],
    "order": 0,
    "settings": {
        "index": {
            "analysis": {
                "analyzer": {
                    "custom_path_tree_reversed": {
                        "tokenizer": "custom_hierarchy_reversed"
                    },
                    "custom_path_tree": {
                        "tokenizer": "custom_hierarchy"
                    },
                    "fulltext_analyzer": {
                        "filter": ["lowercase", "type_as_payload"],
                        "type": "custom",
                        "tokenizer": "whitespace"
                    }
                },
                "tokenizer": {
                    "custom_hierarchy": {
                        "type": "path_hierarchy",
                        "delimiter": "/"
                    },
                    "custom_hierarchy_reversed": {
                        "reverse": "true",
                        "type": "path_hierarchy",
                        "delimiter": "/"
                    }
                }
            },
            "refresh_interval": "5s"
        }
    },
    "mappings": {
        "properties": {
            "@timestamp": {
                "type": "date"
            },
            "@version": {
                "type": "text",
                "fields": {
                    "keyword": {
                        "type": "keyword",
                        "ignore_above": 256
                    }
                }
            },
            "all:catalognumber": {
                "type": "keyword"
            },
            "all:catref": {
                "type": "keyword"
            },
            "all:chklevel": {
                "type": "keyword"
            },
            "bibframe:collection": {
                "type": "keyword"
            },
            "bibframe:identifier@work": {
                "type": "keyword"
            },
            "bibframe:language": {
                "type": "keyword"
            },
            "bibframe:maintitle": {
                "type": "text"
            },
            "bibframe:note@description": {
                "type": "text"
            },
            "bibframe:note@notes": {
                "type": "text"
            },
            "bibframe:person": {
                "type": "text"
            },
            "bibframe:role@author": {
                "properties": {
                    "bibframe:date@authdates": {
                        "type": "text",
                        "fields": {
                            "keyword": {
                                "type": "keyword",
                                "ignore_above": 256
                            }
                        }
                    },
                    "bibframe:identifier@person": {
                        "type": "keyword"
                    },
                    "bibframe:name": {
                        "type": "text"
                    },
                    "bibframe:name@eng": {
                        "type": "text"
                    },
                    "bibframe:name@skt": {
                        "type": "text"
                    },
                    "bibframe:note@person": {
                        "type": "text"
                    },
                    "bibframe:variantname": {
                        "type": "text"
                    },
                    "bibframe:variantname@eng": {
                        "type": "text"
                    },
                    "bibframe:variantname@skt": {
                        "type": "text"
                    }
                }
            },
            "bibframe:subject": {
                "properties": {
                    "all:subjectitems": {
                        "type": "text",
                        "fields": {
                            "keyword": {
                                "type": "keyword",
                                "ignore_above": 256
                            }
                        }
                    },
                    "all:subjectitems@eng": {
                        "type": "text",
                        "fields": {
                            "keyword": {
                                "type": "keyword",
                                "ignore_above": 256
                            }
                        }
                    },
                    "bibframe:identifier@subject": {
                        "type": "keyword"
                    },
                    "bibframe:name": {
                        "type": "text",
                        "fields": {
                            "tree": {
                                "analyzer": "custom_path_tree",
                                "type": "text"
                            },
                            "tree_reversed": {
                                "analyzer": "custom_path_tree_reversed",
                                "type": "text"
                            }
                        }
                    },
                    "bibframe:name@eng": {
                        "type": "text",
                        "fields": {
                            "tree": {
                                "analyzer": "custom_path_tree",
                                "type": "text"
                            },
                            "tree_reversed": {
                                "analyzer": "custom_path_tree_reversed",
                                "type": "text"
                            }
                        }
                    },
                    "bibframe:name@skt": {
                        "type": "text"
                    }
                }
            },
            "bibframe:varianttitle": {
                "type": "text"
            },
            "bibframe:varianttitle@colophon": {
                "type": "text",
                "term_vector": "with_positions_offsets",
                "fields": {
                    "with_payloads": {
                        "analyzer": "fulltext_analyzer",
                        "term_vector": "with_positions_offsets_payloads",
                        "store": true,
                        "type": "text"
                    }
                }
            },
            "bibframe:varianttitle@eng": {
                "type": "text"
            },
            "bibframe:varianttitle@skt": {
                "type": "text"
            }
        }
    }
}

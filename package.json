{
    "name": "example-create-react-app-express",
    "version": "1.0.0",
    "scripts": {
        "client": "cd client && yarn start",
        "server": "nodemon index.js",
        "local:test": "concurrently --kill-others-on-fail \"npm run server\" \"npm run build:test\"",
        "dev": "concurrently --kill-others-on-fail \"npm run server\" \"npm run client\"",
        "build:client": "cd client && npm run build && scp -pr build/* root@acip-search:/var/www/html",
        "build:server": "scp -pr server root@acip-search:/var/www",
        "build:queries": "scp -pr server/queries/* root@acip-search:/var/www/server/queries",
        "deploy:nginx": "scp /usr/local/etc/nginx/nginx.conf root@acip-search:/var/www/search.asianclassics.org"
    },
    "dependencies": {
        "axios": "^0.19.0",
        "body-parser": "^1.18.3",
        "compression": "^1.7.4",
        "cors": "^2.8.5",
        "dotenv": "^8.0.0",
        "elasticsearch": "^16.3.0",
        "express": "^4.16.4",
        "express-validator": "^6.1.1",
        "nodemon": "^1.19.1"
    },
    "devDependencies": {
        "concurrently": "^4.0.1"
    }
}
